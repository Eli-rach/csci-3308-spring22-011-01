<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="../resources/css/styles.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <script src="../resources/js/importNav.js"></script>
        <script src ="../resources/js/homepage.js"></script>
        <script src ="../resources/js/getjournal.js"></script>
        <link rel="stylesheet" href="../resources/css/styles.css">
    </head>
    <body id = 'body'>
        <%- include('./navBar'); %>
       
            <div class = "mainBar">
                <form id="journals" action="" method="get">
                    <table class="table table-bordered" id="stats_table">
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Mood</th>
                            <th>Link</th>
                        </tr>
                        <%if (journals) {
                            journals.forEach(function(item){ %>
                                <%var id = item.entry_id%>
                                <tr>
                                    <td><%-item.entry_date.toDateString()%></td>
                                    <td><%-item.entry_time.substring(0,5)%></td>
                                    <td><%-item.entry_mood_word%></td>
                                    <td><button value ="<%item.entry_id%>" onClick="getJournal('<%=id%>')" type="submit">Link</button></td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </table>
            
                </form>
              <a href = "../new_entry"><h4 id = "newJournalButton">New Journal</h4></a>
            </div>
    </body>
</html>