    <link rel="icon" href="../resources/img/LogoSmall.png" type="image/x-icon">
    <!-- Bootstrap core CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
