<!doctype html>
    <head> 
      <link rel="stylesheet" href = "https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity = "sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin = "anonymous"/>
      <link rel = "stylesheet" href = "https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity = "sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin = "anonymous"/>     
      <link rel="stylesheet" type="text/css" href="../resources/css/registration.css" />   
      <title> Register </title>  
      <style>  body {  color: rgb(15, 15, 15);  }  </style>   
    </head>  
        <body style="text-align:center; background-color:#f15a29;">
            <section class="h-100">  
            <div class="container py-5 h-100">  
            <div class="row d-flex justify-content-center align-items-center h-100">  
            <div class="col">  
            <div class="card card-registration my-4" style="height:100%;width:100%;border:5px solid rgb(12, 12, 11);">  
            <div class="row g-0">  
            <div class="col-xl-6 d-none d-xl-block" >  
            <img src="../resources/img/LogoSmall.png"  alt="ThoughtSpotLogo"  class="img-fluid" style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;"/> 
            <br> <br>
            <h4 style="text-align:center"> Confirm Password Contains: </h4>
            <br>
            <p style="text-align:center" id="letter" class="invalid"> A <b>lowercase</b> letter </p>
            <p style="text-align:center" id="capital" class="invalid"> A <b>capital (uppercase)</b> letter </p>
            <p style="text-align:center" id="number" class="invalid"> A <b>number</b></p>
            <p style="text-align:center" id="symbol" class="invalid"> A <b>symbol</b> "!@#$%^&*()".</p>
            <p style="text-align:center" id="length" class="invalid"> Minimum <b> 8 characters </b></p>
            <p style="text-align:center" id="match" class="invalid"> Password and Confirm Password Match </p>
            </div>  
            <div class="col-xl-6">  
            <div class="card-body p-md-5 text-black">
            <h2 style="color: rgb(16, 16, 16); text-align:center"> Registration </h2> 
            <br><br>
            <div class="container">
                <form style="text-align:left" action="registration" method="POST">
                    <label for="name"> Username:</label>
                    <br>
                    <input type="text" id="name" name='name' placeholder="username">
                    <br>
                    <label for="email"> Email: </label>
                    <br>
                    <input type="text" id="email" name='email' placeholder="johndoe@email.com">
                    <br>
                    <label for="password"> Password: </label>
                    <br>
                    <input type="password" id="password" name='password' placeholder="password">
                    <br>
                    <label for="confirm password"> Confirm Password: </label>
                    <br>
                    <input type="password" id="confirm_password" placeholder="confirm password">
                    <br><br>
                    <p> Receive news and updates via email from us? <input type="radio" name="updates" value="yes" checked> yes <input type="radio" name="updates" value="no" checked> no </p>
                    <br><br>
                    <input id="Submit" href="FirstPage.html" type="submit" value="Submit" class="btn btn-primary btn-block" style="background-color:#fbbd40;" style="color:#ffffff;" disabled> 
                    <br>
                </form>

                <form method="GET" action="FrontPage">
                    <input type='submit' value="Log In" class="btn btn-primary btn-block" style="background-color: rgb(241, 90, 41);" href="/FrontPage"> 
                </form>
                <br><br>
                <br><br>
                <br><br>
            </div>
            </div>
            </div>  
            </div>
            </div>
            </div>
        </div>
        <script src="../resources/js/registration.js"> </script>
